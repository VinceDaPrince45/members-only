<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container">
    <div class="sidebar-menu">
        <ul>
          <% if (user) { %>
            <li>Welcome <%= user.username %></li>
            <li><a href="/logout">Log Out</a></li>
            <li><a href="/profile">Profile</a></li>
          <% } else { %>
            <li><a href="/login">Log In</a></li>
            <li><a href="/sign-up">Register</a></li>
          <% } %>
        </ul>
        <h3>Chats</h3>
        <ul>
          <% if (user && chats && chats.length > 0) { %>
            <% chats.forEach(chat => { %>
              <li><a href="/chat/<%= chat._id %>"><%= chat.name %></a></li>
            <% }) %>
          <% } else { %>
            <li>No chats available</li>
          <% } %>
        </ul>
      </div>
    <div class="chat">
      <!-- no chats opened if redirected -->
      <% if (title == "Chat") { %>
        <%- include("chat") %>
      <% } %>
    </div>
    <div class="chat-login">
      <% if (chat && !isMember) { %>
        <form action="/chat/<%= chat._id %>" method="post">
          <input type="hidden" name="formType" value="passwordForm">
          <div>
              <label for="title">Password: </label>
              <input type="text" id="password" name="password">
          </div>
          <button class="btn btn-primary" type="submit">Send</button>
        </form>
        <% if (passwordErrors) { %>
          <div><%= passwordErrors.msg %></div>
        <% } %>
      <% } %>
    </div>
  </div>
  </div>
</body>
</html>
